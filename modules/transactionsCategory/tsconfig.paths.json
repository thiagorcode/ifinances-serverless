{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@functions/*": [
        "src/functions/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@repository/*": [
        "src/repository/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    }
  }
}