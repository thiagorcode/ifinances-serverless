  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@functions/*": [
        "src/functions/*"
      ],
      "@libs/*": [
        "src/libs/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
